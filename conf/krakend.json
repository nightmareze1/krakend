{
  "version": 3,
  "extra_config": {
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/opencensus": {
        "exporters": {
          "prometheus": {
              "port": 9091,
              "namespace": "krakend",
              "tag_host": true,
              "tag_path": true,
              "tag_method": true,
              "tag_endpoint": true,
              "tag_statuscode": true
          }
      }
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "0s",
  "output_encoding": "json",
  "name": "krakend",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/health",
      "backend": [
      {
          "url_pattern": "/__health",
          "host": [
              "http://localhost:8080"
          ]
      }
      ]
    },
    {
      "endpoint": "/api/app2",
      "method": "GET",
      "input_headers": [ "*" ],
      "input_query_strings": [ "*" ],
      "output_encoding": "no-op",
      "extra_config": {},
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/app2/",
          "input_headers": [ "*" ],
          "input_query_strings": [ "*" ],
          "encoding": "no-op",
          "sd": "static",
          "extra_config": {},
          "method": "GET",
          "host": ["http://172.40.0.21"],
          "extra_config": {
              "backend/http": {
                  "return_error_details": "backend_app2"
              }
          }
        }
      ]
    }
  ]
}
